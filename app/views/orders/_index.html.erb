
<% if (@orders)
     @orders.each do |order|  %>
    <tr>
      <td><%= order.order_name %></td>
      <td><%= order.api_key %></td>
      <td><%= order.api_secret_key %></td>
      <td><%= order.exchange_type %></td>
      <td><%= order.frequency_type %></td>
      <td><%= order.rate %></td>
      <!--<td> number_to_currency order.amount </td> -->
      <td><%= order.amount %></td>
      <td><%= order.created_at %></td>
      <td><%= order.updated_at %></td>
      <% if order.verified_order? %>
          <td>Yes</td>
      <% else %>
          <td>No - <%= link_to "Verify now", remote: true, class: "btn", :controller => "order_confirmation", :action => "new", :selected_order => order.id %></td>
      <% end %>
      <td><%= link_to "Update", edit_order_path(order.id), remote: true, class: "btn" %></td>
      <td><%= link_to "Delete", orders_delete_path(:selected_order => order.id), remote: true, class: "btn" %></td>
    </tr>
<% end
end %>