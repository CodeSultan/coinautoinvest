
<% provide(:title, "Forgot password") %>
<h2 style="text-align: center; margin-top: 100px">You forgot password?</h2>

<div class="row">
  <div style="text-align: center">
    <h2><strong><%= flash.now[:danger] %></strong></h2>
  </div>
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(:password_reset, url: password_resets_path) do |f| %>
        <%= f.label :email %>
        <%= f.email_field :email, class: 'form-control', style: 'margin-bottom: 20px' %>

        <%= f.submit "Submit", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>