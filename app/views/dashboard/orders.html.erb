
<div class="wrapper">
  <!-- top navbar-->
  <header class="topnavbar-wrapper">
    <%= render partial: "layouts/partials/admin_topnavbar" %>
  </header>
  <!-- sidebar-->
  <aside class="aside">
    <%= render partial: "layouts/partials/admin_sidebar" %>
  </aside>
  <!-- offsidebar-->
  <aside class="offsidebar hide">
    <%= render partial: "layouts/partials/admin_offsidebar" %>
  </aside>
  <!-- Main section-->
  <section>
    <!-- Page content-->
    <div class="content-wrapper">
      <div>
        <h1 style="text-align: center">All Orders</h1>
      </div>
      <table class="table table-bordered table-striped table-hover" role="grid">
        <thead style="border-radius: 5px">
        <tr>
          <th>User ID</th>
          <th>Order Name</th>
          <th>Exchange Type</th>
          <th>Frequency Type</th>
          <th>Rate</th>
          <th>Amount</th>
          <th>Verified</th>
          <th>Created Time</th>
          <th>Updated Time</th>
          <th></th>
        </tr>
        </thead>
        <tbody class="order-index">
        <%= render "orderindex" %>
        </tbody>
      </table>
    </div>
  </section>
  <!-- Page footer-->
  <footer>
    <%= render partial: "layouts/partials/admin_footer" %>
  </footer>
</div>

<%= yield :body_area %>
