
<div class="wrapper">
  <!-- top navbar-->
  <header class="topnavbar-wrapper">
    <%= render partial: "layouts/partials/admin_topnavbar" %>
  </header>
  <!-- sidebar-->
  <aside class="aside">
    <%= render partial: "layouts/partials/admin_sidebar" %>
  </aside>
  <!-- offsidebar-->
  <aside class="offsidebar hide">
    <%= render partial: "layouts/partials/admin_offsidebar" %>
  </aside>
  <!-- Main section-->
  <section>
    <!-- Page content-->
    <div class="content-wrapper">
      <%=
        if controller?('dashboard') && action?('users')
          render partial: "layouts/partials/download"
        end

        if controller?('dashboard') && action?('orders')
           render :partial => 'dashboard/orders', :layout => 'dashboard/orders'
        end
      %>
    </div>
  </section>
  <!-- Page footer-->
  <footer>
    <%= render partial: "layouts/partials/admin_footer" %>
  </footer>
</div>

<%= yield :body_area %>
